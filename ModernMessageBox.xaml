<Window x:Class="MavlinkInspector.Controls.ModernMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" 
        Height="Auto" 
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent" >

    <Window.Resources>
        <Style x:Key="MessageBoxButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="85"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter x:Name="contentPresenter" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="8,4"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#252526"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- İkincil buton stili (Cancel butonu için) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource MessageBoxButton}">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
        </Style>
    </Window.Resources>
    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" 
                            ShadowDepth="0" 
                            Color="#40000000"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="#252526" 
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources/message.png" VerticalAlignment="Center" Height="20" Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}"
                             Foreground="#CCCCCC"
                             FontSize="13"
                             Margin="12,0,0,0"
                             VerticalAlignment="Center"/>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Message Panel -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource ControlBackground}"
                    Margin="1">
                <Grid Margin="20,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="40" 
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource BorderColor}"
                            Margin="0,0,15,0">
                        <Image x:Name="MessageIcon" 
                               Width="20" 
                               Height="20"/>
                    </Border>

                    <TextBlock x:Name="MessageText"
                             Grid.Column="1"
                             TextWrapping="Wrap"
                             Foreground="{DynamicResource TextColor}"
                             FontSize="13"
                             LineHeight="20"
                             VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Button Panel -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource ControlBackground}"
                    CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Margin="20,12">
                    <Button x:Name="OkButton" Height="30" Margin="0,0,5,0" Width="50" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Ok"
                            Style="{StaticResource ModernButton}"
                            Click="OkButton_Click"/>
                    <Button x:Name="CancelButton" Height="30" Margin="10,0,0,0" Width="50" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Cancel"
                            Style="{StaticResource ModernButton}"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>