<Window x:Class="MavlinkInspector.GraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Message Graph" Height="600" Width="1000"
        Background="#1E1E1E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Kontrol Paneli -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <GroupBox Header="Display Settings" Padding="10" Margin="0,0,10,0"
                      Foreground="White" BorderBrush="#3F3F46">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Sample Count:" Foreground="White" 
                             VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="SampleCountCombo" Width="80" Margin="0,0,10,0"
                            SelectedIndex="0">
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                        <ComboBoxItem Content="200"/>
                        <ComboBoxItem Content="500"/>
                    </ComboBox>

                    <TextBlock Text="Update Rate (ms):" Foreground="White" 
                             VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="UpdateRateCombo" Width="80" Margin="0,0,10,0"
                            SelectedIndex="1">
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                        <ComboBoxItem Content="200"/>
                        <ComboBoxItem Content="500"/>
                    </ComboBox>

                    <CheckBox x:Name="AutoScaleCheckbox" Content="Auto Scale" 
                            IsChecked="True" Foreground="White" 
                            VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <Button x:Name="ClearButton" Content="Clear Data" 
                            Width="80" Margin="0,0,10,0" Click="ClearButton_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Legend" Padding="10" Margin="0,0,10,0"
                      Foreground="White" BorderBrush="#3F3F46">
                <ItemsControl x:Name="LegendItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                <Rectangle Width="16" Height="16" Margin="0,0,5,0"
                                         Fill="{Binding Color}"/>
                                <TextBlock Text="{Binding Title}" Foreground="White"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Value, StringFormat=': {0:F2}'}" 
                                         Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>
        </StackPanel>

        <!-- Grafik -->
        <lvc:CartesianChart Grid.Row="1" x:Name="Chart" 
                           Background="#252526"
                           DisableAnimations="True"
                           Zoom="X">
            <lvc:CartesianChart.DataTooltip>
                <lvc:DefaultTooltip Background="#333333" 
                                   Foreground="White"
                                   ShowTitle="True"
                                   ShowSeries="True"
                                   SelectionMode="SharedXValues"/>
            </lvc:CartesianChart.DataTooltip>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Samples" 
                         Foreground="White"
                         MinValue="0">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="10" Stroke="#3F3F46"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Value"
                         Foreground="White">
                    <lvc:Axis.Separator>
                        <lvc:Separator Stroke="#3F3F46"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <!-- Durum Çubuğu -->
        <StatusBar Grid.Row="2" Background="#252526">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Foreground="White"
                         Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
