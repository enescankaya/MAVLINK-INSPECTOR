<Window x:Class="MavlinkInspector.GraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Message Graph" Height="600" Width="1070"
        Background="#1E1E1E"
        RenderOptions.BitmapScalingMode="LowQuality"
        RenderOptions.EdgeMode="Aliased"
        RenderOptions.CacheInvalidationThresholdMinimum="0.5"
        RenderOptions.CacheInvalidationThresholdMaximum="2.0"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        CacheMode="BitmapCache">
    <Grid Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Kontrol Paneli -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Sol taraftaki ayarlar -->
            <GroupBox Header="Display Settings" 
                      Padding="10" Margin="0,0,10,0"
                      Foreground="White" BorderBrush="#3F3F46" BorderThickness="0.1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Sample Count:" Foreground="White" 
                                 VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="SampleCountCombo" Width="80" Margin="0,0,10,0"
                                SelectedIndex="0">
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                            <ComboBoxItem Content="200"/>
                            <ComboBoxItem Content="500"/>
                        </ComboBox>

                        <TextBlock Text="Update Rate (ms):" Foreground="White" 
                                 VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="UpdateRateCombo" Width="80" Margin="0,0,10,0"
                                SelectedIndex="0">
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                            <ComboBoxItem Content="200"/>
                            <ComboBoxItem Content="500"/>
                        </ComboBox>

                        <CheckBox x:Name="AutoScaleCheckbox" Content="Auto Scale" 
                                IsChecked="True" Foreground="White" 
                                VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <Button x:Name="ClearButton" Content="Clear Data" 
                                Width="80" Margin="0,0,10,0" Click="ClearButton_Click"/>
                    </StackPanel>

                    <!-- Gelişmiş Filtreleme Kontrolü -->
                    <GroupBox Header="Filter Settings" Margin="0,10,0,0" 
                             BorderBrush="#3F3F46" BorderThickness="0.1">
                        <StackPanel>
                            <TextBlock Text="Smooth signal with previous values:" 
                                     Foreground="White" 
                                     Margin="0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Raw" Foreground="White" 
                                         Grid.Column="0"/>
                                <Slider x:Name="FilterSlider" 
                                       Grid.Column="1"
                                       Minimum="0" 
                                       Maximum="100" 
                                       Value="70" 
                                       TickFrequency="10"
                                       TickPlacement="BottomRight"
                                       Margin="10,0"/>
                                <TextBlock Text="Smooth" Foreground="White" 
                                         Grid.Column="2"/>
                            </Grid>
                            <TextBlock x:Name="FilterValueText" 
                                     Text="Current Filter: 70% previous, 30% new" 
                                     Foreground="#A0A0A0"
                                     FontSize="11"
                                     Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <!-- Sağ taraftaki data grid -->
            <GroupBox Header="Signal Statistics" DockPanel.Dock="Right"
                      Padding="10" Margin="0,0,0,0"
                      Foreground="White" BorderBrush="#3F3F46" BorderThickness="0.1">
                <DataGrid x:Name="StatisticsGrid"
                                 AutoGenerateColumns="False"
                                 Background="#252526"
                                 BorderThickness="0"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column"
                                 IsReadOnly="True"
                                 ItemsSource="{Binding}"
                                 RowHeaderWidth="0">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#333337"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,6"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333337"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Signal" Width="2.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="4,0">
                                        <Rectangle Width="14" 
                                                         Height="14" 
                                                         Margin="0,0,8,0"
                                                         Fill="{Binding Color}"/>
                                        <TextBlock Text="{Binding Title}" 
                                                         Foreground="White"
                                                         VerticalAlignment="Center"/>
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Current" 
                                                  Width="*" 
                                                  Binding="{Binding Value, StringFormat=F7}"/>
                        <DataGridTextColumn Header="Min" 
                                                  Width="*"
                                                  Binding="{Binding Statistics.Min, StringFormat=F7}"/>
                        <DataGridTextColumn Header="Max" 
                                                  Width="*"
                                                  Binding="{Binding Statistics.Max, StringFormat=F7}"/>
                        <DataGridTextColumn Header="Mean" 
                                                  Width="*"
                                                  Binding="{Binding Statistics.Mean, StringFormat=F7}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </DockPanel>

        <!-- Grafik -->
        <lvc:CartesianChart Grid.Row="1" x:Name="Chart" 
                           Background="#252526"
                           DisableAnimations="True"
                           Hoverable="False"
                           IsHitTestVisible="True"
                           IsManipulationEnabled="True"
                           Zoom="X"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           AnimationsSpeed="0"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <lvc:CartesianChart.DataTooltip>
                <lvc:DefaultTooltip Background="#333333" 
                                   Foreground="White"
                                   ShowTitle="True"
                                   ShowSeries="True"
                                   SelectionMode="SharedXValues"/>
            </lvc:CartesianChart.DataTooltip>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Samples" 
                         Foreground="White"
                         MinValue="0">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="10" Stroke="#3F3F46"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Value"
                         Foreground="White">
                    <lvc:Axis.Separator>
                        <lvc:Separator Stroke="#3F3F46"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <!-- Durum Çubuğu -->
        <StatusBar Grid.Row="2" Background="#252526" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Foreground="White"
                         Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>