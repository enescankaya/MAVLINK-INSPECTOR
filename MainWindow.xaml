<Window x:Class="MavlinkInspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAVLink Inspector" Height="700" Width="1200"
        Background="#1E1E1E" Closing="Window_Closing">
    <Window.Resources>
        <!-- Modern renk paleti -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#252526"/>
        <SolidColorBrush x:Key="ControlBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="TextColor" Color="#D4D4D4"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>

        <!-- TreeView stil güncellemesi -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#094771"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Ortak kontrol stilleri -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C97EA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- GroupBox stil güncellemesi -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                 FontSize="13"
                                 FontFamily="Segoe UI"
                                 Margin="0,0,0,5"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.Resources>
            <Style TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="True"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <GroupBox Header="Connection Settings" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <ComboBox Width="120" Name="ConnectionTypeComboBox" Margin="5"
                          SelectionChanged="ConnectionTypeComboBox_SelectionChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>

                    <StackPanel Name="SerialPanel" Orientation="Horizontal">
                        <ComboBox Width="120" Name="PortComboBox" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                        <ComboBox Width="120" Name="BaudRateComboBox" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                    </StackPanel>

                    <StackPanel Name="NetworkPanel" Orientation="Horizontal" Visibility="Collapsed">
                        <TextBox Width="120" Name="IpAddressTextBox" Margin="5" Text="127.0.0.1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                        <TextBox Width="80" Name="PortTextBox" Margin="5" Text="5762" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                    </StackPanel>

                    <Button Name="ConnectButton" Content="Connect" Width="100" Margin="5" 
                        Click="ConnectButton_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Display Options" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Name="ShowGCSTraffic" Content="Show GCS Traffic" Margin="5" 
                         VerticalAlignment="Center" Foreground="{StaticResource TextColor}" />
                    <Button Name="ResetButton" Content="Reset" Width="80" Margin="5" 
                        Click="ResetButton_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Eşit genişlikli kolonlar -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TreeView güncellemesi -->
            <TreeView Name="treeView1" Grid.Column="0"
                      Background="{StaticResource PanelBackground}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderColor}"
                      Padding="5"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      SelectedItemChanged="TreeView_SelectedItemChanged" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <TreeView.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                    Color="#44FFFFFF"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
                                    Color="White"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" 
                                    Color="#22FFFFFF"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" 
                                    Color="LightGray"/>
                </TreeView.Resources>
            </TreeView>

            <!-- Separator -->
            <GridSplitter Grid.Column="1" 
                         Width="6" 
                         Background="Transparent"
                         HorizontalAlignment="Center">
                <GridSplitter.Template>
                    <ControlTemplate>
                        <Border Width="6" 
                                Background="{StaticResource BorderColor}"
                                Margin="3,0"/>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

            <!-- Message Details güncellemesi -->
            <GroupBox Grid.Column="2" 
                     Header="Message Details" 
                     Background="{StaticResource PanelBackground}">
                <TextBox Name="detailsTextBox"
                         Background="{StaticResource ControlBackground}"
                         Foreground="{StaticResource TextColor}"
                         FontFamily="Cascadia Code, Consolas"
                         FontSize="13"
                         Padding="10"
                         BorderThickness="0"
                         IsReadOnly="True"/>
            </GroupBox>
        </Grid>

        <!-- Status bar güncellemesi -->
        <StatusBar Grid.Row="2" 
                  Background="{StaticResource PanelBackground}"
                  Foreground="{StaticResource TextColor}">
            <StatusBarItem Padding="10,5">
                <TextBlock x:Name="statusConnectionText" Text="Disconnected"/>
            </StatusBarItem>
            <Separator Background="{StaticResource BorderColor}"/>
            <StatusBarItem Padding="10,5">
                <TextBlock x:Name="statusMessagesText" Text="Messages: 0"/>
            </StatusBarItem>
            <Separator Background="{StaticResource BorderColor}"/>
            <StatusBarItem Padding="10,5">
                <TextBlock x:Name="statusRateText" Text="Rate: 0 msg/s"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
