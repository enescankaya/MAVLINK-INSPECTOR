<Window x:Class="MavlinkInspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAVLink Inspector" Height="800" Width="750"
        Closing="Window_Closing">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="True"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <GroupBox Header="Connection Settings" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <ComboBox Width="120" Name="ConnectionTypeComboBox" Margin="5"
                          SelectionChanged="ConnectionTypeComboBox_SelectionChanged"/>

                    <StackPanel Name="SerialPanel" Orientation="Horizontal">
                        <ComboBox Width="120" Name="PortComboBox" Margin="5"/>
                        <ComboBox Width="120" Name="BaudRateComboBox" Margin="5"/>
                    </StackPanel>

                    <StackPanel Name="NetworkPanel" Orientation="Horizontal" Visibility="Collapsed">
                        <TextBox Width="120" Name="IpAddressTextBox" Margin="5" Text="127.0.0.1"/>
                        <TextBox Width="80" Name="PortTextBox" Margin="5" Text="5762"/>
                    </StackPanel>

                    <Button Name="ConnectButton" Content="Connect" Width="80" Margin="5" 
                        Click="ConnectButton_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Display Options" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Name="ShowGCSTraffic" Content="Show GCS Traffic" Margin="5" 
                         VerticalAlignment="Center"/>
                    <Button Name="ResetButton" Content="Reset" Width="80" Margin="5" 
                        Click="ResetButton_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <TreeView Name="treeView1" Grid.Column="0" Margin="5"
                      Background="White"
                      FontFamily="Consolas"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling">
            </TreeView>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"/>

            <GroupBox Grid.Column="2" Header="Message Details">
                <TextBox Name="detailsTextBox" 
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         TextWrapping="NoWrap"/>
            </GroupBox>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem Name="statusConnection" Content="Disconnected"/>
            <Separator/>
            <StatusBarItem Name="statusMessages" Content="Messages: 0"/>
            <Separator/>
            <StatusBarItem Name="statusRate" Content="Rate: 0 msg/s"/>
        </StatusBar>
    </Grid>
</Window>
