<Window x:Class="MavlinkInspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAVLink Inspector" Height="700" Width="1200"
        Background="#1E1E1E" Closing="Window_Closing" >
    <Window.Resources>
        <!-- Modern renk paleti -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#252526"/>
        <SolidColorBrush x:Key="ControlBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="TextColor" Color="#D4D4D4"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>

        <!-- TreeView stil güncellemesi -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#094771"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Ortak kontrol stilleri -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C97EA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- GroupBox stil güncellemesi -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                 FontSize="13"
                                 FontFamily="Segoe UI"
                                 Margin="0,0,0,5"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.Resources>
            <Style TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="True"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" >
            <GroupBox Header="Connection Settings" Padding="5" BorderThickness="0.1">
                <StackPanel Orientation="Horizontal">
                    <ComboBox Width="120" Name="ConnectionTypeComboBox" Margin="5"
                          SelectionChanged="ConnectionTypeComboBox_SelectionChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>

                    <StackPanel Name="SerialPanel" Orientation="Horizontal">
                        <ComboBox Width="120" Name="PortComboBox" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                        <ComboBox Width="120" Name="BaudRateComboBox" Margin="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                    </StackPanel>

                    <StackPanel Name="NetworkPanel" Orientation="Horizontal" Visibility="Collapsed">
                        <TextBox Width="120" Name="IpAddressTextBox" Margin="5" Text="127.0.0.1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                        <TextBox Width="80" Name="PortTextBox" Margin="5" Text="5762" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                    </StackPanel>

                    <Button Name="ConnectButton" Content="Connect" Width="100" Margin="5" 
                        Click="ConnectButton_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Display Options" Padding="5" BorderThickness="0.1">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Name="ShowGCSTraffic" Content="Show GCS Traffic" Margin="5" 
                         VerticalAlignment="Center" Foreground="{StaticResource TextColor}" />
                    <Button Name="ResetButton" Content="Reset" Width="80" Margin="5" 
                        Click="ResetButton_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Yeni Update Settings GroupBox -->
            <GroupBox Header="Update Settings" Padding="5" BorderThickness="0.1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Update Interval:" 
                             VerticalAlignment="Center" 
                             Margin="5,0"
                             Foreground="{StaticResource TextColor}"/>
                    <ComboBox Name="UpdateIntervalComboBox" 
                             Width="80" 
                             Margin="5"
                             SelectedValuePath="Value"
                             DisplayMemberPath="Display"
                             SelectionChanged="UpdateIntervalComboBox_SelectionChanged"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             Background="White">
                        <ComboBox.Resources>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#333333"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                    <TextBlock Text="ms" 
                             VerticalAlignment="Center"
                             Margin="0,0,5,0"
                             Foreground="{StaticResource TextColor}"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Eşit genişlikli kolonlar -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TreeView güncellemesi -->
            <TreeView Name="treeView1" Grid.Column="0"
                      Background="{StaticResource PanelBackground}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderColor}"
                      Padding="5"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      SelectedItemChanged="TreeView_SelectedItemChanged" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <TreeView.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                    Color="#44FFFFFF"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
                                    Color="White"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" 
                                    Color="#22FFFFFF"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" 
                                    Color="LightGray"/>
                </TreeView.Resources>
            </TreeView>

            <!-- Separator -->
            <GridSplitter Grid.Column="1" 
              Width="14" 
              Background="White" 
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              ResizeDirection="Columns"
              ShowsPreview="True">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Width="14" 
                    CornerRadius="2"
                    Background="{StaticResource AccentColor}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="2"
                    VerticalAlignment="Stretch">
                            <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                                <!-- Dekoratif Noktalar -->
                                <Ellipse Width="4" 
                             Height="4" 
                             Fill="White" 
                             Margin="0,2"/>
                                <Ellipse Width="4" 
                             Height="4" 
                             Fill="White" 
                             Margin="0,2"/>
                                <Ellipse Width="4" 
                             Height="4" 
                             Fill="White" 
                             Margin="0,2"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>


            <!-- Message Details güncellemesi -->
            <GroupBox Grid.Column="2" Header="Message Details" Background="{StaticResource PanelBackground}" ScrollViewer.HorizontalScrollBarVisibility="Auto" BorderThickness="0.1">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible" CanContentScroll="True">
                    <StackPanel Margin="5">
                        <!-- Header Section -->
                        <Border Background="{StaticResource ControlBackground}" 
                    CornerRadius="4" Padding="10" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                </Grid.RowDefinitions>

                                <!-- Left Column - Existing Fields -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Message Type:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="msgTypeText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="System ID:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="sysidText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Component ID:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="compidText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Message ID:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="msgidText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Length:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="lengthText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <!-- Right Column - New Fields -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Message Type Name:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="msgTypeNameText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="1" Grid.Column="2" Text="CRC16:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="crc16Text"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="2" Text="Sequence:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Grid.Column="3" x:Name="seqText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="3" Grid.Column="2" Text="Header:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="3" Grid.Column="3" x:Name="headerText"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="4" Grid.Column="2" Text="MAVLink Version:" 
                             Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="4" Grid.Column="3" x:Name="isMavlink2Text"
                             Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Fields Section -->
                        <TextBlock Text="Message Fields" 
           FontWeight="SemiBold" 
           Margin="5,5,5,5" 
           Foreground="{StaticResource TextColor}"
           FontSize="13"/>

                        <Border Background="{StaticResource ControlBackground}" 
        CornerRadius="4" 
        Margin="0,5"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="1">
                            <ListView x:Name="fieldsListView" 
              Background="Transparent"
              BorderThickness="0"
              Margin="2"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectionMode="Multiple">
                                <ListView.Resources>
                                    <!-- GridViewColumnHeader Style -->
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#A0A0A0"/>
                                        <Setter Property="Height" Value="32"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="GridViewColumnHeader">
                                                    <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="0,0,0,1"
                                    Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="{TemplateBinding Content}"
                                         Foreground="{TemplateBinding Foreground}"
                                         VerticalAlignment="Center"
                                         FontSize="12"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3E3E42"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.Resources>

                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Field" Width="140">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Field}" 
                                     Foreground="{StaticResource TextColor}"
                                     Padding="0,10,0,0" VerticalAlignment="Bottom"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Value" Width="180">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Value}" 
                                     Foreground="{StaticResource TextColor}"
                                     Padding="0,10,0,0"
                                     TextWrapping="Wrap" VerticalAlignment="Bottom"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Type" Width="120">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Type}" 
                                     Foreground="#A0A0A0"
                                     Padding="0,10,0,0" VerticalAlignment="Bottom"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Height" Value="32"/>
                                        <Setter Property="VerticalAlignment" Value="Bottom"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3E3E42"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#094771"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

        </Grid>

        <!-- Status bar güncellemesi -->
        <StatusBar Grid.Row="2" x:Name="statusBar"
                  Background="{StaticResource PanelBackground}"
                  Foreground="{StaticResource TextColor}">
            <StatusBarItem Padding="10,5">
                <TextBlock x:Name="statusConnectionText" Text="Disconnected"/>
            </StatusBarItem>
            <Separator Background="{StaticResource BorderColor}"/>
            <StatusBarItem Padding="10,5">
                <TextBlock x:Name="statusMessagesText" Text="Messages: 0"/>
            </StatusBarItem>
            <Separator Background="{StaticResource BorderColor}"/>
            <StatusBarItem Padding="10,5">
                <TextBlock x:Name="statusRateText" Text="Rate: 0 msg/s"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
